/*******************************
    User Variable Overrides
*******************************/

.ui.cards > .card .meta,
.ui.card .meta {
  margin-block-end: 1rem;
}

.ui.card h3 {
  margin-bottom: 0.5rem;
}

.ui.card ul {
  margin-block-start: 0;
  padding-inline-start: 1rem;
}

.ui.card ul li {
  margin-block-end: 0.375rem;
}

.ui.card section + section {
  margin-block-start: 1rem;
}
